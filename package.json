{
	"name": "@mypreview/html-boilerplate",
	"version": "1.0.0",
	"private": true,
	"description": "Simple boilerplate for building web app with babel-cli and sass.",
	"homepage": "https://github.com/mypreview/html-boilerplate#readme",
	"bugs": {
		"url": "https://github.com/mypreview/html-boilerplate/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mypreview/html-boilerplate.git"
	},
	"license": "GPL-3.0-or-later",
	"author": "Mahdi Yazdani",
	"files": [
		"assets/**",
		"build/**",
		"index.html"
	],
	"scripts": {
		"build": "npm run build:css && npm run build:js",
		"build:css": "rimraf build/css/* && npm run lint:css && sass src/scss/style.scss build/css/style.min.css --style=compressed --no-source-map",
		"build:js": "rimraf build/js/* && npm run format && npm run lint:js && babel src/js/script.js --out-file build/js/script.min.js --no-comments --minified --presets=@babel/preset-env && terser --compress --mangle --output build/js/script.min.js -- build/js/script.min.js",
		"build:zip": "node ./.plugin-zip.js",
		"format": "prettier --ignore-path .eslintignore --write \"**/*.{html,js,jsx,json,ts,tsx}\"",
		"lint:css": "stylelint src/scss/**/*.scss",
		"lint:css:fix": "stylelint src/scss/**/*.scss --fix",
		"lint:js": "eslint src/js/**/*.js",
		"lint:js:fix": "eslint src/js/**/*.js --fix",
		"watch:css": "sass src/scss/style.scss build/css/style.min.css --style=expanded --watch",
		"watch:js": "babel src/js/script.js --out-file build/js/script.min.js --presets=@babel/preset-env --watch"
	},
	"devDependencies": {
		"@babel/cli": "7.19.3",
		"@babel/core": "7.19.3",
		"@babel/preset-env": "7.19.3",
		"@wordpress/browserslist-config": "5.2.0",
		"@wordpress/eslint-plugin": "13.2.0",
		"@wordpress/prettier-config": "2.1.0",
		"@wordpress/stylelint-config": "21.1.0",
		"adm-zip": "0.5.9",
		"eslint": "8.24.0",
		"fast-glob": "3.2.12",
		"prettier": "npm:wp-prettier@2.6.2",
		"read-pkg-up": "7.0.1",
		"rimraf": "3.0.2",
		"sass": "1.55.0",
		"stylelint": "14.13.0",
		"terser": "5.15.0"
	}
}
